<div class="manager-images">
    @if (ViewData["Delete"] != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewData["Delete"]
        </div>
    }
    <br />
    <h4><strong>Gerenciar Imagens</strong></h4>
    <br />
    <div class="container">
        <div class="row">
            <form method="post" enctype="multipart/form-data" asp-controller="AdminManagerImages"
                asp-action="UploadFiles">
                <img src="~/images/upload2.png" width="200" height="150" />
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Selecione um ou mais arquivos para enviar :</b></p>
                        <p>(Arquivos com o mesmo nome ser√£o sobrescritos)</p>
                        <input type="file" name="files" multiple class="button btn-outline-primary" />
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Enviar Arquivo(s)" class="button btn-outline-primary" />
                    </div>
                </div>
            </form>
        </div>
        <hr class="hr-images" />
        <div class="row">
            <form method="post" enctype="multipart/form-data" asp-controller="AdminManagerImages"
                asp-action="GetImages">
                <img src="~/images/visualizar1.jpg" width="200" height="200" />
                <div class="form-group">
                    <div class="col-md-10">
                        <p><strong>Visualizar Imagens na pasta do servidor :</strong></p>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Visualizar Arquivos no servidor"
                            class="button btn-outline-warning" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>