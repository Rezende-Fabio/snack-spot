@model IEnumerable<snack_spot.Models.Pedido>

<div class="relat-pedido">
    <h2>Pedidos Por Per√≠odo</h2>

    <nav class="navbar navbar-dark mb-4">
        <div class="container-fluid">
            <form class="navbar-form navbar-left">
                <div class="form-group">
                    <div class="form-group mb-2">
                        <label for="iniDate">Data Inicial</label>
                        <input type="date" class="form-control" name="iniDate" value=@ViewData["iniDate"] />
                    </div>
                    <div class="form-group mb-5">
                        <label for="finalDate">Data Final</label>
                        <input type="date" class="form-control" name="finalDate" value=@ViewData["finalDate"] />
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Filtrar</button>
            </form>
        </div>
    </nav>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Total de Pedidos = @Model.Count()</h3>
            <h3 class="panel-title">Total de Lanches nos Pedidos = @Model.Sum(obj => obj.TotalItensPedido).ToString()
            </h3>
            <h3 class="panel-title">Valor Total dos Pedidos = @Model.Sum(obj => obj.PedidoTotal).ToString("c")</h3>
        </div>
        <div class="panel-body">
            <table class="table">
                <thead>
                    <tr class="success">
                        <th>
                            @Html.DisplayNameFor(model => model.PedidoId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PedidoTotal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalItensPedido)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PedidoEntregueEm)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PedidoId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PedidoTotal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalItensPedido)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PedidoEntregueEm)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
