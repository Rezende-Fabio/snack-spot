@model Pedido

<div class="checkout-completo">
    <div class="container mt-1">

        <div class="jumbotron mb-3">
            <h2>@ViewBag.CheckoutCompletoMensagem</h2>
        </div>

        <div class="card">
            <div class="card-body">
                <p>Cliente: <strong>@Model.Nome</strong></p>
                <p>Data do Pedido: <strong>@Model.PedidoEnviado.ToLocalTime()</strong></p>
                <p>Número do Pedido: #<strong>@Model.PedidoId</strong></p>
                <hr>

                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Quantidade</th>
                            <th>Lanche</th>
                            <th>Preço</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PedidoItens){
                            <tr>
                                <td>
                                    <img src="@item.Lanche.ThumbnailUrl" alt="Imagem do Lanche" width="40" height="40">
                                </td>
                                <td>
                                    @item.Quantidade
                                </td>
                                <td>
                                    @item.Lanche.Nome
                                </td>
                                <td>
                                    @item.Lanche.Preco
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <h4>
                    Valor total do Pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong>
                </h4>
            </div>
        </div>

        <div class="form-group justify-content-center mt-3">
            <h3>
                <a class="btn btn-primary" asp-controller="Home" asp-action="Index">
                    Retornar
                </a>
            </h3>
        </div>

    </div>
</div>