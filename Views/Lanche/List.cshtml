@model LancheListViewModel

<h2>@Model.CategoriaAtual</h2>

<div class="container mt-4">
    <div class="row justify-content-md-center">
        @foreach (var lanche in Model.Lanches)
        {
            <div class="col-card col-sm-3 col-md-3 col-lg-3 text-center mb-5 me-3">
                <h4>@lanche.Nome</h4>
                <img src="@lanche.ThumbnailUrl"><br>
                <span class="col-preco">Pre√ßo: @lanche.Preco.ToString("c")</span>
            </div>
        }
    </div>
</div>